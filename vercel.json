{
  "version": 2,
  "public": true,
  "builds": [
    { "src": "src/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/$", "dest": "/src/index.html" },
    { "src": "/css/(.*)", "dest": "/src/css/$1" },
    { "src": "/js/(.*)", "dest": "/src/js/$1" },
    { "src": "/public/(.*)", "dest": "/src/public/$1" },
    { "src": "/favicon.ico", "dest": "/src/public/fav.ico" },
    { "src": "/src/(.*)", "dest": "/src/$1" }
  ]
}
